{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch backend",
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "args": [
        "${workspaceFolder}/zdn-app/src/index.ts"
      ],
      "env": {
        "TS_NODE_IGNORE": "false",
        "NODE_ENV": "dev",
        "TZ": "utc"
      },
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "ts-node/register"
      ],
      "cwd": "${workspaceRoot}/zdn-app",
      "protocol": "inspector",
      "outFiles": [
        "${workspaceFolder}/zdn-app/**/*.js"
      ]
    }
  ]
}